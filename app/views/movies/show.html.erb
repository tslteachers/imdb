<h1><%= @movie.title %></h1>

<p>
  <%= link_to "Home", root_url %>
</p>

<img src="/assets/<%= @movie.title.gsub(' ', '_').downcase %>.jpg" width="200">

<p><strong>Year:</strong> <%= @movie.year %></p>

<p><strong>Director:</strong> <%= link_to @movie.director.name, director_url(@movie.director.id) %></p>

<p><strong>Cast:</strong></p>

<ul>
  <% @movie.roles.each do |role| %>
    <li><%= role.actor.name %></li>
  <% end %>
</ul>










