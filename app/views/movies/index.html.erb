<h1>Movies</h1>

<%= link_to "Add a New Movie", "/movies/new" %>

<ul>
  <% @movies.each do |movie| %>
    <li>
      <%= link_to "#{movie.title} (#{movie.year})", "/movies/#{movie.id}"  %>
      <%= link_to "Edit", "/movies/#{movie.id}/edit" %>
      <%= link_to "Delete", "/movies/#{movie.id}",
          :method => 'delete', :data => { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
